<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PhysicalActivity" >

    <TextView
        android:id="@+id/messagePATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="45dp"
        android:text="Please insert your latest activity" />

    <EditText
        android:id="@+id/parameterPAEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/parameterPATextView"
        android:layout_alignBottom="@+id/parameterPATextView"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/parameterPATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagePATextView"
        android:layout_marginTop="64dp"
        android:layout_toLeftOf="@+id/parameterPAEditText"
        android:text="Parameter:" />

    <TextView
        android:id="@+id/timePATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/parameterPATextView"
        android:layout_centerVertical="true"
        android:text="Time:" />

    <EditText
        android:id="@+id/timePAEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timePATextView"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/timePATextView"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/donePAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePAEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Done" />
    
     <Button
         android:id="@+id/openpopup"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="View Recommendation" />

</RelativeLayout>
